{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "platform": ["dist/platform"],
      "platform/*": ["dist/platform/*"],
      "sms": ["dist/sms"],
      "sms/*": ["dist/sms/*"],
      "admin": ["dist/admin"],
      "admin/*": ["dist/admin/*"],
      "login": ["dist/login"],
      "login/*": ["dist/login/*"],
      "ptdb": ["dist/ptdb"],
      "ptdb/*": ["dist/ptdb/*"],
      "@@stats/test-lib": ["libs/test-lib/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
